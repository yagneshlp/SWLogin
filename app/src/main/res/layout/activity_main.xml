<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_below="@id/textv"
        android:orientation="vertical"
        android:paddingTop="0dp"
        android:layout_height="wrap_content">


        <me.grantland.widget.AutofitTextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/topMargin"
            android:paddingBottom="@dimen/gapBetween"
            android:text="Connected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:elevation="5dp"
            android:textColor="#fff"
            android:id="@+id/textv"
            android:textSize="60sp"></me.grantland.widget.AutofitTextView>

        <Button
            android:id="@+id/buttonsave"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Connection"
            android:background="@android:color/white"
            android:layout_marginTop="10dp"
            android:onClick="refresh"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="20dp"
            android:paddingBottom="0dp"
            android:elevation="10dp"
            />
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Check Time Left"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@android:color/white"
            android:onClick="time"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="40dp"
            android:paddingBottom="0dp"
            android:elevation="5dp"
            />




        <me.grantland.widget.AutofitTextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="@string/appcred"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="15sp"/>

        <me.grantland.widget.AutofitTextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="B.Tech 1st Year - Prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#fff"
            android:textSize="13sp"/>
        <me.grantland.widget.AutofitTextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingTop="10sp"
            android:text="www.yagneshlp.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="#90ffffff"
            android:onClick="yaglp"
            android:textSize="10sp"></me.grantland.widget.AutofitTextView>



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:orientation="horizontal">


        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="56dp"
            android:src="@drawable/ic_info"
            android:onClick="info"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            android:layout_marginStart="56dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="60dp"
            android:src="@drawable/ic_exit"
            android:onClick="logout"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/colorPrimaryDark"
            android:layout_marginEnd="60dp"
            android:layout_alignTop="@+id/fabi"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>





</LinearLayout>

